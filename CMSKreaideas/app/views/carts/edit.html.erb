<h1>Editar carrito</h1>
Desgloce detallado para editar 
<%= nested_form_for(@cart) do |f| %>
	<table border="1">
		<tr>
			
	    	<th>Producto</th>
	        <th>Precio</th>
	        <th>Cantidad</th>
	        <th>Total de la linea</th>
	    </tr>
		<h3>  Lineas de venta</h3>
	   	<%= f.fields_for :line_items do |task| %>
	  		<tr>
	  			
		   		<%= task.fields_for :product do |task2| %>

		  			<td ><%=task2.label :name, value= "#{task2.object.name}"%></td >
		    		<td ><%=task2.label :price, value= number_to_currency(task2.object.price, :precision => 2)%></td >
					<td ><%= task.text_field :quantity %></td >
					<td><%=task.label :name, value= "#{task.object.total_price}"%></td>
				<% end %>
			</tr>
		<% end %>
	</table>
	Total: <%= number_to_currency(@cart.total_price) %>
	<%= f.submit "Guardar cambios"%>
<% end %>
