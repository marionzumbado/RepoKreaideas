<ul>
  <% if ::Refinery::Albums::Admin::AlbumsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.albums_admin_albums_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_albums_admin_album_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Albums::Admin::AlbumsController.sortable? && ::Refinery::Albums::Album.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Albums"),
                 refinery.albums_admin_albums_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Albums"),
                 refinery.albums_admin_albums_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
