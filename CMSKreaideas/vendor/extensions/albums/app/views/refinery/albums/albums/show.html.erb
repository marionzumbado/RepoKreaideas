<% content_for :body_content_title do %>
  <%= @album.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @album.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @album.description %>
    </p>
  </section>
  <section>
    <h1>Imagen</h1>
    <p>
      <%= image_fu @album.imagen, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="albums">
      <% @albums.each do |album| %>
        <li>
          <%= link_to album.name, refinery.albums_album_path(album) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
