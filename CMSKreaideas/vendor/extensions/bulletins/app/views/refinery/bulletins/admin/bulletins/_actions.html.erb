<ul>
  <% if ::Refinery::Bulletins::Admin::BulletinsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bulletins_admin_bulletins_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_bulletins_admin_bulletin_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Bulletins::Admin::BulletinsController.sortable? && ::Refinery::Bulletins::Bulletin.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Bulletins"),
                 refinery.bulletins_admin_bulletins_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Bulletins"),
                 refinery.bulletins_admin_bulletins_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
