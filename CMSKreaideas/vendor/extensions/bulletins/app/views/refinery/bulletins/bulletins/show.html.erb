<% content_for :body_content_title do %>
  <%= @bulletin.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @bulletin.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @bulletin.description %>
    </p>
  </section>
  <section>
    <h1>Publicationday</h1>
    <p>
      <%=raw @bulletin.publicationday %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @bulletin.user_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bulletins">
      <% @bulletins.each do |bulletin| %>
        <li>
          <%= link_to bulletin.title, refinery.bulletins_bulletin_path(bulletin) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
